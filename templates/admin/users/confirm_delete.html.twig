{% extends 'base.html.twig' %}

{% block title %}Confirm Delete User{% endblock %}

{% block body %}
    <div class="delete-wrapper">
        <h1>Êtes-vous sûr de vouloir supprimer cet utilisateur?</h1>
        <p>Email: {{ user.email }}</p>
        <p>Rôles: {{ user.roles|join(', ') }}</p>
        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-delete">Oui, supprimer</a>
        <a href="{{ path('admin_user_list') }}" class="btn">Non, revenir en arrière</a>
    </div>
{% endblock %}
