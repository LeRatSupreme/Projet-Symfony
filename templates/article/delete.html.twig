{% extends 'base.html.twig' %}

{% block title %}Confirm Delete Article{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
        .delete-wrapper {
            padding: 20px;
        }
        .btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #3498db;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s;
            border: none;
        }
        .btn:hover {
            background-color: #2980b9;
        }
        .btn-delete {
            background-color: #e74c3c;
        }
        .btn-delete:hover {
            background-color: #c0392b;
        }
    </style>
    <div class="delete-wrapper">
        <h1>Êtes-vous sûr de vouloir supprimer cet article?</h1>
        <p>{{ article.titre }}</p>
        <p>{{ article.texte }}</p>
        <p>Publié le: {{ article.date|date('d/m/Y H:i') }}</p>
        <a href="{{ path('delete_article', {'id': article.id, 'confirm': 'yes'}) }}" class="btn btn-delete">Oui, supprimer</a>
        <a href="{{ path('show_article', {'id': article.id}) }}" class="btn">Non, revenir en arrière</a>
    </div>
{% endblock %}
